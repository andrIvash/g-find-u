{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "target": "ES6",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "assets/*": ["./assets/*"],
      "src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "tools/**/*"],
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "cypress",
    "**/*.cy.tsx",
    "./cypress.config.tsx",
  ]
}